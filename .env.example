# ── LLM ──────────────────────────────────────
# Groq (FREE, no credit card): https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# ── LangSmith Monitoring ──────────────────────
# FREE tier: https://smith.langchain.com
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=deep-research-agent

# ── Source APIs ───────────────────────────────
# GitHub token: https://github.com/settings/tokens
# Scopes: public_repo, read:user
GITHUB_TOKEN=your_github_token_here

# ── Qdrant Vector DB (Docker) ─────────────────
# Run with: docker-compose up -d
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=research_cache
EMBEDDING_MODEL=all-MiniLM-L6-v2
SEMANTIC_CACHE_THRESHOLD=0.85

# ── Supabase (Optional, FREE tier) ───────────
# https://supabase.com → new project
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# ── App ───────────────────────────────────────
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
ENABLE_STREAMING=true

# ── Models ────────────────────────────────────
FAST_MODEL=llama-3.1-8b-instant
SMART_MODEL=llama-3.1-70b-versatile

# ── Search ────────────────────────────────────
MAX_RESULTS_PER_SOURCE=10
QUALITY_THRESHOLD=0.70
SUPERVISOR_RECURSION_LIMIT=25

# ── CORS ──────────────────────────────────────
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]
