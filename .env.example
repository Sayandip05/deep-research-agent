# =============================================================================
# LLM Configuration
# =============================================================================

# Groq (FREE - RECOMMENDED)
GROQ_API_KEY=your_groq_api_key_here
# Get from: https://console.groq.com

# OpenAI (Alternative - has free tier)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Alternative - $5 free credit)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Source API Keys
# =============================================================================

# GitHub
GITHUB_TOKEN=your_github_personal_access_token
# Get from: https://github.com/settings/tokens

# Reddit
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=deep-research-agent/1.0
# Get from: https://www.reddit.com/prefs/apps

# =============================================================================
# Database (Optional - for production)
# =============================================================================

# Supabase (FREE tier available)
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_KEY=your_supabase_anon_key
# Get from: https://supabase.com

# =============================================================================
# Application Settings
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=True

# API
API_HOST=0.0.0.0
API_PORT=8000

# Cache
CACHE_TYPE=memory  # Options: memory, redis
CACHE_TTL=3600  # Cache time-to-live in seconds

# Rate Limits
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_PERIOD=60  # seconds

# =============================================================================
# Model Configuration
# =============================================================================

# Model selection
FAST_MODEL=llama-3.1-8b-instant  # For quick tasks
SMART_MODEL=llama-3.1-70b-versatile  # For complex synthesis

# Streaming
ENABLE_STREAMING=True

# =============================================================================
# Search Configuration
# =============================================================================

# Maximum results per source
MAX_RESULTS_PER_SOURCE=10

# Semantic cache similarity threshold (0.0 to 1.0)
SEMANTIC_CACHE_THRESHOLD=0.85

# Quality score threshold for refinement
QUALITY_THRESHOLD=0.70

# =============================================================================
# Security (Optional - for production deployment)
# =============================================================================

# JWT Secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# SECRET_KEY=your_secret_key_here

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Monitoring (Optional)
# =============================================================================

# Sentry (FREE tier available)
# SENTRY_DSN=your_sentry_dsn_here
# Get from: https://sentry.io

# Better Stack / Logtail (FREE tier available)
# LOGTAIL_SOURCE_TOKEN=your_logtail_token_here
# Get from: https://betterstack.com
